@page "/groceries/lists/{Id:int}"
@inject ApplicationDbContext Db
@inject NavigationManager Nav

<PageTitle>Grocery List</PageTitle>

@if (list == null)
{
    <p>Loading...</p>
}
else
{
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div>
            <h1 class="mb-0">@list.Name</h1>
            @if (list.WeekStart.HasValue)
            {
                <div class="text-muted">Week of @list.WeekStart:yyyy-MM-dd</div>
            }
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/groceries/lists">Back</a>
            <button class="btn btn-outline-danger" type="button" @onclick="DeleteList">Delete list</button>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <EditForm Model="listEdit" OnValidSubmit="SaveListMeta">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">List name</label>
                        <InputText class="form-control" @bind-Value="listEdit.Name" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Week start</label>
                        <InputDate class="form-control" @bind-Value="listEdit.WeekStart" />
                    </div>
                    <div class="col-md-2 d-grid">
                        <button class="btn btn-outline-primary" type="submit">Update</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Add item</div>
        <div class="card-body">
            <EditForm Model="itemForm" OnValidSubmit="AddItem">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Name</label>
                        <InputText class="form-control" @bind-Value="itemForm.Name" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Quantity</label>
                        <InputNumber class="form-control" @bind-Value="itemForm.Quantity" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Unit</label>
                        <InputText class="form-control" @bind-Value="itemForm.Unit" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Saved item (optional)</label>
                        <InputSelect class="form-select" @bind-Value="itemForm.GroceryItemId" @bind-Value:after="() => AfterCatalogChange(itemForm.GroceryItemId)">
                            <option value="">-- none --</option>
                            @foreach (var itm in catalog)
                            {
                                <option value="@itm.Id">@itm.Name</option>
                            }
                        </InputSelect>
                        <div class="form-text">Selecting will copy defaults.</div>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <div class="col-md-4">
                        <label class="form-label">Category</label>
                        <InputSelect class="form-select" @bind-Value="itemForm.GroceryCategoryId">
                            <option value="">Uncategorized</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Notes</label>
                        <InputText class="form-control" @bind-Value="itemForm.Notes" />
                    </div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Add item</button>
                </div>
            </EditForm>
        </div>
    </div>

    @if (!list.Items.Any())
    {
        <div class="alert alert-info">No items yet.</div>
    }
    else
    {
        @foreach (var group in GroupedItems())
        {
            <div class="mb-4">
                <h5 class="border-bottom pb-2">@group.Key</h5>
                <ul class="list-group">
                    @foreach (var item in group)
                    {
                        <li class="list-group-item">
                            <div class="d-flex align-items-start justify-content-between">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" checked="@item.IsChecked" @onchange="() => Toggle(item)" />
                                    <label class="form-check-label">
                                        <div class="fw-semibold">@item.Name</div>
                                        <div class="text-muted small">
                                            @if (item.Quantity.HasValue)
                                            {
                                                @item.Quantity @(" " + item.Unit)
                                            }
                                            @if (!string.IsNullOrWhiteSpace(item.Notes))
                                            {
                                                <span> Â· @item.Notes</span>
                                            }
                                        </div>
                                    </label>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => StartEdit(item)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteItem(item)">Delete</button>
                                </div>
                            </div>
                            @if (editingItem?.Id == item.Id)
                            {
                                <div class="mt-3 p-3 bg-light rounded">
                                    <EditForm Model="editingItem" OnValidSubmit="SaveEdit">
                                        <DataAnnotationsValidator />
                                        <div class="row g-2">
                                            <div class="col-md-3">
                                                <InputText class="form-control" @bind-Value="editingItem!.Name" />
                                            </div>
                                            <div class="col-md-2">
                                                <InputNumber class="form-control" @bind-Value="editingItem!.Quantity" />
                                            </div>
                                            <div class="col-md-2">
                                                <InputText class="form-control" @bind-Value="editingItem!.Unit" />
                                            </div>
                                            <div class="col-md-3">
                                                <InputSelect class="form-select" @bind-Value="editingItem!.GroceryCategoryId">
                                                    <option value="">Uncategorized</option>
                                                    @foreach (var cat in categories)
                                                    {
                                                        <option value="@cat.Id">@cat.Name</option>
                                                    }
                                                </InputSelect>
                                            </div>
                                            <div class="col-md-12">
                                                <InputText class="form-control" @bind-Value="editingItem!.Notes" placeholder="Notes" />
                                            </div>
                                        </div>
                                        <div class="mt-2 d-flex gap-2">
                                            <button class="btn btn-sm btn-primary" type="submit">Save</button>
                                            <button class="btn btn-sm btn-secondary" type="button" @onclick="CancelEdit">Cancel</button>
                                        </div>
                                    </EditForm>
                                </div>
                            }
                        </li>
                    }
                </ul>
            </div>
        }
    }
}

@code {
    [Parameter] public int Id { get; set; }

    private GroceryList? list;
    private List<GroceryItem> catalog = new();
    private List<GroceryCategory> categories = new();
    private GroceryListItemForm itemForm = new();
    private GroceryListItem? editingItem;
    private ListMeta listEdit = new();

    protected override void OnParametersSet()
    {
        Load();
    }

    private void Load()
    {
        list = Db.GroceryLists
            .Include(l => l.Items)
            .ThenInclude(i => i.GroceryCategory)
            .Include(l => l.Items)
            .ThenInclude(i => i.GroceryItem)
            .FirstOrDefault(l => l.Id == Id);
        catalog = Db.GroceryItems.Include(i => i.GroceryCategory).OrderBy(i => i.Name).ToList();
        categories = Db.GroceryCategories.OrderBy(c => c.SortOrder).ThenBy(c => c.Name).ToList();
        if (list != null)
        {
            listEdit = new ListMeta { Name = list.Name, WeekStart = list.WeekStart };
        }
    }

    private void AfterCatalogChange(int? selectedId)
    {
        if (selectedId.HasValue)
        {
            var item = catalog.FirstOrDefault(c => c.Id == selectedId.Value);
            if (item != null)
            {
                itemForm.Name = item.Name;
                itemForm.Unit = item.DefaultUnit;
                itemForm.GroceryCategoryId = item.GroceryCategoryId;
            }
        }
        else
        {
            itemForm.Name = string.Empty;
        }
    }

    private void AddItem()
    {
        if (list == null || string.IsNullOrWhiteSpace(itemForm.Name)) return;

        if (itemForm.GroceryCategoryId == null && itemForm.GroceryItemId.HasValue)
        {
            var catalogItem = catalog.FirstOrDefault(c => c.Id == itemForm.GroceryItemId.Value);
            if (catalogItem != null)
            {
                itemForm.GroceryCategoryId = catalogItem.GroceryCategoryId;
                if (string.IsNullOrWhiteSpace(itemForm.Unit))
                {
                    itemForm.Unit = catalogItem.DefaultUnit;
                }
            }
        }

        var newItem = new GroceryListItem
        {
            GroceryListId = list.Id,
            Name = itemForm.Name.Trim(),
            Quantity = itemForm.Quantity,
            Unit = itemForm.Unit,
            GroceryItemId = itemForm.GroceryItemId,
            GroceryCategoryId = itemForm.GroceryCategoryId,
            Notes = itemForm.Notes,
            IsChecked = false
        };

        Db.GroceryListItems.Add(newItem);
        Db.SaveChanges();
        itemForm = new GroceryListItemForm();
        Load();
    }

    private IEnumerable<IGrouping<string, GroceryListItem>> GroupedItems()
    {
        if (list == null) yield break;
        var grouping = list.Items
            .Select(i => new
            {
                Item = i,
                Category = i.GroceryCategory ?? i.GroceryItem?.GroceryCategory
            })
            .OrderBy(x => x.Category?.SortOrder ?? int.MaxValue)
            .ThenBy(x => x.Category?.Name)
            .ThenBy(x => x.Item.Name)
            .GroupBy(x => x.Category?.Name ?? "Uncategorized", x => x.Item);

        foreach (var group in grouping)
        {
            yield return group;
        }
    }

    private void Toggle(GroceryListItem item)
    {
        item.IsChecked = !item.IsChecked;
        Db.SaveChanges();
    }

    private void DeleteItem(GroceryListItem item)
    {
        Db.GroceryListItems.Remove(item);
        Db.SaveChanges();
        Load();
    }

    private void StartEdit(GroceryListItem item)
    {
        editingItem = new GroceryListItem
        {
            Id = item.Id,
            GroceryListId = item.GroceryListId,
            Name = item.Name,
            Quantity = item.Quantity,
            Unit = item.Unit,
            GroceryCategoryId = item.GroceryCategoryId,
            Notes = item.Notes,
            IsChecked = item.IsChecked,
            GroceryItemId = item.GroceryItemId
        };
    }

    private void CancelEdit() => editingItem = null;

    private void SaveEdit()
    {
        if (editingItem == null) return;
        var existing = Db.GroceryListItems.FirstOrDefault(i => i.Id == editingItem.Id);
        if (existing == null) return;

        existing.Name = editingItem.Name;
        existing.Quantity = editingItem.Quantity;
        existing.Unit = editingItem.Unit;
        existing.GroceryCategoryId = editingItem.GroceryCategoryId;
        existing.Notes = editingItem.Notes;

        Db.SaveChanges();
        editingItem = null;
        Load();
    }

    private void SaveListMeta()
    {
        if (list == null) return;
        list.Name = listEdit.Name?.Trim() ?? list.Name;
        list.WeekStart = listEdit.WeekStart;
        Db.SaveChanges();
        Load();
    }

    private void DeleteList()
    {
        if (list == null) return;
        Db.GroceryLists.Remove(list);
        Db.SaveChanges();
        Nav.NavigateTo("/groceries/lists");
    }

    private class GroceryListItemForm
    {
        [Required]
        public string Name { get; set; } = string.Empty;
        public decimal? Quantity { get; set; }
        public string? Unit { get; set; }
        public int? GroceryItemId { get; set; }
        public int? GroceryCategoryId { get; set; }
        public string? Notes { get; set; }
    }

    private class ListMeta
    {
        public string? Name { get; set; }
        public DateOnly? WeekStart { get; set; }
    }
}
